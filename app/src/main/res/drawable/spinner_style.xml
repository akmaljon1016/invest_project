<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="24dp" />
                    <stroke android:color="#F5F4F8" android:width="1dp"/>
                    <padding android:left="20dp" android:right="20dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_location" android:gravity="center_vertical|start" />
            <item android:drawable="@drawable/ic_down" android:gravity="center_vertical|end" />
        </layer-list>
    </item>
</selector>